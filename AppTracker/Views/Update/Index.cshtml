@model IEnumerable<AppTracker.Models.Update>

@{
                /**/

                ViewBag.Title = "Updates for Applications";
}

<h2>Updates for Applications</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by position or company: @Html.TextBox("searchString", null, new { @class = "form-control" })
        <button class="btn btn-default" type="submit">Search</button>
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Position", "Index", new { sortOrder = ViewBag.PosSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Application.Company.Name)
        </th>
        <th>
            @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Application.Position)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Application.Company.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Subject)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Note)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.UpdateID }) |
        @Html.ActionLink("Details", "Details", new { id = item.UpdateID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.UpdateID })
    </td>
</tr>
}

</table>
